{% extends 'content.html.twig' %}
{% block content %}
    <v-container fill-height grid-list>
        <v-layout row wrap align-center>
            <v-flex class='px-5'>
                <v-row>
                    {% for list in lists %}
                        <v-col cols='12' md='6' lg='4' xl='4'>
                            <quick-list list='{{ list|json_encode() }}' hide='{{ hide }}'></quick-list>
                        </v-col>
                    {% endfor %}
                </v-row>
            </v-flex>
        </v-layout>
    </v-container>
    <quick-list-clipboard value='{{ clipboardPositions|json_encode() }}' top=true></quick-list-clipboard>
    <a href='{{ path('quickLists.add') }}' class='text-decoration-none lists-add-button pa-3'>
        <v-btn fab dark color='error' type='button'>
            <v-icon dark>mdi-plus</v-icon>
        </v-btn>
    </a>
{% endblock %}