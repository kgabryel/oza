{% if findPath is not defined %}
    {% set findPath = path(app.request.attributes.get('_route')) %}
{% endif %}
<v-container fill-height>
    <v-layout row wrap align-center>
        <v-flex class='px-0 mt-3'>
            <v-row>
                <v-col cols='12' sm='12' md='6' class='mt-3 mt-0 mt-md-3'>
                    <v-btn block color='secondary' elevation='2' large type='submit'>
                        <v-icon left dark>
                            mdi-magnify
                        </v-icon>
                        Szukaj
                    </v-btn>
                </v-col>
                <v-col cols='12' sm='12' md='6' class='mt-0 mt-md-3 pt-0 pt-md-3'>
                    <a href='{{ findPath }}' class='text-decoration-none'>
                        <v-btn block color='teal' elevation='2' large type='button'>
                            <v-icon left dark>
                                mdi-brush
                            </v-icon>
                            Czyść
                        </v-btn>
                    </a>
                </v-col>
            </v-row>
        </v-flex>
    </v-layout>
</v-container>