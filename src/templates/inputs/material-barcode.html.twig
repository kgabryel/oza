{% block material_barcode_widget %}
    <input-barcode-field
        label='{{ label }}'
        type='text'
        name='{{ full_name }}'
        value='{{ value }}'
        errors='{{ errors|errorMessages|json_encode() }}'
        {% if hint is defined %}bottom='{{ hint }}'{% endif %}
        {% if attr.maxlength is defined %}maxlength='{{ attr.maxlength }}'{% endif %}>
    </input-barcode-field>
{% endblock %}
